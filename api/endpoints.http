


###############################################
# 1. AUTHENTICATION
###############################################

### Register User
POST {{baseUrl}}/api/accounts/users/
Content-Type: application/json

{
  "full_name": "John Doe",
  "email": "john@example.com",
  "phone_number": "0781234567",
  "password": "Test1234!",
  "re_password": "Test1234!",
  "role": "CLIENT"
}

### Verify Email
POST {{baseUrl}}/api/accounts/users/verify_email/
Content-Type: application/json

{
  "email": "john@example.com",
  "code": "123456"
}

### Login
POST {{baseUrl}}/api/accounts/login/
Content-Type: application/json

{
  "email": "john@example.com",
  "password": "Test1234!"
}


